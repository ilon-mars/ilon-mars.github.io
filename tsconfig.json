{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "target": "es2020",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2019",
      "DOM"
    ],
    "ignoreDeprecations": "5.0",
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
